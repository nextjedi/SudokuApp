# Fastlane Match Configuration
# For more information: https://docs.fastlane.tools/actions/match/

# Git URL for certificates repository (private repo)
git_url(ENV['MATCH_GIT_URL'])

# Storage mode (git, google_cloud, s3, or gitlab_secure_files)
storage_mode("git")

# Type of provisioning profile
type("appstore") # Can be: appstore, adhoc, development, enterprise

# App Identifier
app_identifier(ENV['APP_IDENTIFIER'] || ["com.sudokustreak.app"])

# Your Apple Developer Portal username
username(ENV['APPLE_ID'])

# Team ID
team_id(ENV['TEAM_ID'])

# Git branch to use for certificates
git_branch("main")

# Keychain name for storing certificates
keychain_name(ENV['MATCH_KEYCHAIN_NAME'] || "login.keychain")

# Keychain password
keychain_password(ENV['MATCH_KEYCHAIN_PASSWORD'] || "")

# Force readonly mode (safer for CI)
readonly(true)
