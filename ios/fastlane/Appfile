# iOS Appfile
# This file contains the configuration for Fastlane

app_identifier(ENV['APP_IDENTIFIER'] || "com.sudokustreak.app") # Replace with your bundle identifier
apple_id(ENV['APPLE_ID']) # Your Apple ID email
team_id(ENV['TEAM_ID']) # Your Developer Portal Team ID

# App Store Connect API Key (Preferred method)
app_store_connect_api_key(
  key_id: ENV['APP_STORE_CONNECT_KEY_ID'],
  issuer_id: ENV['APP_STORE_CONNECT_ISSUER_ID'],
  key_content: ENV['APP_STORE_CONNECT_KEY_CONTENT'],
  is_key_content_base64: true
)
