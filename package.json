{
  "name": "sudoku-streak",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build:web": "expo export --platform web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "ci": "npm run lint && npm run typecheck && npm run test:coverage",
    "clean": "rm -rf node_modules .expo web-build dist-web coverage test-results",
    "prepare": "husky",
    "version:bump": "node scripts/bump-version.js",
    "version:major": "node scripts/bump-version.js major",
    "version:minor": "node scripts/bump-version.js minor",
    "version:patch": "node scripts/bump-version.js patch",
    "analyze-bundle": "@expo/cli analyze web-build",
    "lighthouse": "npx lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json"
  },
  "keywords": [
    "sudoku",
    "puzzle",
    "game",
    "streak",
    "react-native",
    "expo"
  ],
  "author": "Sudoku Streak Team",
  "license": "MIT",
  "description": "A classic Sudoku puzzle game with daily streak tracking for iOS and Android",
  "dependencies": {
    "@react-native-async-storage/async-storage": "~2.2.0",
    "@reduxjs/toolkit": "~2.9.0",
    "expo": "~54.0.33",
    "expo-constants": "~18.0.13",
    "expo-linear-gradient": "~15.0.8",
    "expo-notifications": "~0.32.16",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "~0.81.4",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-safe-area-context": "~5.6.1",
    "react-native-screens": "~4.16.0",
    "react-native-web": "~0.21.0",
    "react-redux": "~9.2.0"
  },
  "devDependencies": {
    "@eslint/js": "~9.36.0",
    "@testing-library/jest-native": "~5.4.3",
    "@testing-library/react-native": "~13.3.3",
    "@types/react": "~19.1.10",
    "@types/react-native": "~0.72.8",
    "@typescript-eslint/eslint-plugin": "~8.44.0",
    "@typescript-eslint/parser": "~8.44.0",
    "eslint": "~9.36.0",
    "husky": "~9.1.7",
    "jest": "~29.7.0",
    "lint-staged": "~16.2.7",
    "prettier": "~3.6.2",
    "react-native-testing-library": "~2.2.0",
    "ts-jest": "~29.4.4",
    "typescript": "~5.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
